@model IEnumerable<Delicious_Food_Recipes.Models.Favorite>

@{
    ViewData["Title"] = "Favori Tarifler";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        /* Body Styling */
        body {
            background-color: #412310;
            background-image: url('/images/background8.jpg'); /* Arka plan görseli */
            background-size: cover; /* Tüm ekranı kapla */
            background-repeat: no-repeat; /* Görsel tekrar etmez */
            background-position: center center; /* Görseli ortala */
            font-family: 'Arial', sans-serif; /* Yazı tipi */
            color: #ffffff; /* Yazı rengi */
        }

        /* Card Styling */
        .card {
            border: none;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.2s ease-in-out;
        }

            .card:hover {
                transform: translateY(-10px);
            }

        .card-body {
            background-color: white;
            padding: 20px;
            border-radius: 10px;
        }

        .card-img-top {
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
        }

        /* Buttons */
        .btn-primary {
            background-color: #861b2d;
            border-color: #861b2d;
        }

            .btn-primary:hover {
                background-color: #ff0033;
                border-color: #ff0033;
            }

        /* Search Input */
        .input-group input {
            border-radius: 25px;
        }

        .input-group button {
            border-radius: 25px;
            padding-left: 20px;
            padding-right: 20px;
        }

        /* Alerts */
        .alert-warning {
            background-color: #fff3cd;
            color: #856404;
        }

        /* Headings */
        h2 {
            color: #ffffff;
            ;
        }

        /* Filters */
        .filter-section {
            margin-bottom: 20px;
        }

        .alphabet-filter .badge {
            display: inline-block;
            margin: 5px;
            padding: 10px 15px;
            font-size: 14px;
            background-color: #f8f9fa;
            color: #861b2d;
            border: 1px solid #861b2d;
            transition: all 0.3s ease-in-out;
        }

            .alphabet-filter .badge:hover {
                background-color: #861b2d;
                color: white;
            }

        .country-filter .country-badge {
            margin: 3px;
            padding: 4px 7.5px;
            text-decoration: none;
            border: 1px solid #861b2d;
            border-radius: 5px;
            background-color: #f8f9fa;
            color: #861b2d;
            display: inline-flex;
            align-items: center;
            transition: all 0.3s ease-in-out;
        }

            .country-filter .country-badge:hover {
                background-color: #861b2d;
                color: white;
            }

        .country-filter img {
            width: 50px;
            height: auto;
            margin-right: 2px;
            border-radius: 1.5px;
        }
    </style>
</head>





<body>





<h1>Favorites Recipes</h1>

<div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var favorite in Model)
    {
        <div class="col">

            <div class="card shadow-sm h-100">
                    <a href="@Url.Action("Details", "Home", new { id = favorite.RecipeId })">
                        <img src="@favorite.RecipeImgUrl" alt="@favorite.RecipeName" class="card-img-top" style="height: 200px; object-fit: cover;" />
                    </a>

                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-truncate" title="@favorite.RecipeName">
                        @favorite.RecipeName
                    </h5>
                        

                        <a href="@Url.Action("RemoveFavorite", "Favorites", new { mealId = favorite.RecipeId })"
                           class="btn btn-primary mt-auto">
                            Remove from Favorites
                        </a>
                </div>
            </div>
        </div>
    }
</div>



</body>
</html>
